{
  "name": "fsd4thtask",
  "version": "1.0.0",
  "description": "Full stack development 4th task: range slider plugin",
  "main": "src/index.ts",
  "scripts": {
    "clean": "rm -rf ./dist/",
    "rollup:build": "rollup -c",
    "rollup:watch": "rollup -c -w",
    "build": "run-s clean rollup:build",
    "start": "run-s clean rollup:watch",
    "lint": "eslint src/**/*.ts --fix",
    "test": "karma start karma.conf.js",
    "test:once": "karma start karma.conf.js --single-run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rsilivestr/FSD4hTask.git"
  },
  "author": "Roman Silivestrov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rsilivestr/FSD4hTask/issues"
  },
  "homepage": "https://github.com/rsilivestr/FSD4hTask#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.0.0",
    "@types/chai": "^4.2.14",
    "@types/chai-dom": "0.0.10",
    "@types/jquery": "^3.5.5",
    "@types/mocha": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "chai": "^4.2.0",
    "chai-dom": "^1.8.2",
    "eslint": "^7.15.0",
    "husky": "^4.3.5",
    "jsdom": "^16.4.0",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-chai-dom": "^1.1.0",
    "karma-coverage": "^2.0.3",
    "karma-jsdom-launcher": "^8.0.2",
    "karma-mocha": "^2.0.1",
    "karma-typescript": "^5.2.0",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.34.2",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "jquery": "^3.5.1"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:once"
    }
  },
  "browserslist": [
    "defaults"
  ]
